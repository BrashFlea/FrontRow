@model FrontRowCMS2.Models.Page
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    string isEditable = HttpContextAccessor.HttpContext.Session.GetString("isEditable");
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FrontRowCMS</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body data-spy="scroll" data-target=".navbar">
    <div>
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#"><img src="~/images/yf_logo.svg" alt="Youth Futures Logo" class="img-responsive" /></a>
                </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="~/" data-target="#home">Home</a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Programs <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="~/secondary#outreachBanner" data-target="#outreachBanner">Street Outreach</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="~/errors/comingSoon.html" data-target="#dropinsMain">Drop-Ins</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="~/errors/comingSoon.html" data-target="#sheltersMain">Shelters</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Get Involved <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="~/secondary#donateMain" data-target="#donateMain">Donate</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="~/secondary#eventsMain" data-target="#eventsMain">Events</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="~/secondary#donorsMain" data-target="#donorsMain">Donor Recognition</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">About Us <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="~/secondary#historyBanner" data-target="#historyBanner">History</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="~/secondary#staffMain" data-target="#staffMain">Staff</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="~/secondary#directorsMain" data-target="#directorsMain">Board</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="~/secondary#mediaMain" data-target="#mediaMain">Media</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Contact <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="~/secondary#contactMain" data-target="#contactMain">Contact Info</a></li>
                            </ul>
                        </li>
                        <li class="donate"><a href="secondary#donateMain">Donate</a></li>
                    </ul>
                </div>
                <!-- /.navbar-collapse -->
            </div>
            <!-- /.container-fluid -->
        </nav>
        <div class="main_body_view">
            @RenderBody()
        </div>

        <footer class="container-fluid">
            <div class="row">
                <div class="col-md-5">
                    <section class="col-sm-4 footer-section">
                        <p class="quicksand-dark-18-white">Contact</p>
                        <p class="mont-light-dark-14-email">Email: @Html.DisplayFor(model => model.Footer.ContactEmail)</p>
                        <p class="mont-light-dark-14-email">
                            Phone:
                            <tel>@Html.DisplayFor(model => model.Footer.ContactPhone)</tel>
                        </p>
                    </section>
                    <section class="col-sm-4 footer-section">
                        <p class="quicksand-dark-18-white">Mailing Address</p>
                        <p class="mont-light-dark-14-email">Youth Futures<br /> 
                                                            @Html.DisplayFor(model => model.Footer.MailingAddressLine1)<br /> 
                                                            @Html.DisplayFor(model => model.Footer.MailingAddressLine2)</p>
                    </section>
                    <section class="col-sm-4 footer-section">
                        <p class="quicksand-dark-18-white">Shelter Address</p>
                        <p class="mont-light-dark-14-email">Youth Futures<br /> 
                                                            @Html.DisplayFor(model => model.Footer.ShelterAddressLine1)<br /> 
                                                            @Html.DisplayFor(model => model.Footer.ShelterAddressLine2)</p>
                    </section>
                </div>
                <div class="col-md-2">
                    <section class="footer-section">
                        <img src="~/images/@Html.DisplayFor(model => model.Footer.HomeImage)" alt="Home Image" class="footer-home" />
                    </section>
                </div>
                <div class="col-md-5">
                    <section class="footer-section">
                        <div class="social-media">
                            <a href="@Html.DisplayFor(model => model.Footer.InstagramLink)"><img src="~/images/social_instagram.png" alt="Instagram" /></a>
                            <a href="@Html.DisplayFor(model => model.Footer.TwitterLink)"><img src="~/images/social_twitter.png" alt="Twitter" /></a>
                            <a href="@Html.DisplayFor(model => model.Footer.TumblrLink)"><img src="~/images/social_tumblr.png" alt="Tumbler" /></a>
                            <a href="@Html.DisplayFor(model => model.Footer.FacebookLink)"><img src="~/images/social_fb.png" alt="Facebook" /></a>
                        </div>
                    </section>
                </div>
            </div>
            <div class="copyright">
                <p class="mont-regular-dark-16-grey">© Youth Futures, Inc.</p>
            </div>

            @if (isEditable == "true")
                {
                    <form method="post" action="~/Account/Logout" class="text-center">
                        <button type="submit" href="~/Account/Logout" class="btn btn-warning">Logout</button>
                        <a href="~/Manage/" class="btn btn-info">Manage Account</a>
                    </form>
                }
                else
                {
                    <div class="text-center loginLink">
                        <a href="~/Account/Login" class="">Login</a>
                    </div>
                }

        </footer>
       @if (@isEditable == "true")
           {
            <div class="row text-center ">
                <a class="btn btn-success editableButton" href="~/home/EditFooter" role="button">Edit Footer</a>
                <hr />
            </div>
           }

        <environment include="Development">
            <script src="~/lib/jquery/dist/jquery.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>
        </environment>
        <environment exclude="Development">
            <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                    asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                    asp-fallback-test="window.jQuery"
                    crossorigin="anonymous"
                    integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
            </script>
            <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                    asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                    asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                    crossorigin="anonymous"
                    integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
            </script>
            <script src="~/js/site.min.js" asp-append-version="true"></script>
        </environment>

        <script>
            $('body').scrollspy({ selector: '.scrollclass', offset: 123 });
        </script>

        @RenderSection("Scripts", required: false)
    </div>
</body>
</html>
