                <label asp-for="Service2.Image" class="control-label"></label>
                <img src="~/images/@Html.DisplayFor(model => model.Service2.Image)" style="max-height:100px;" />
                <input asp-for="Service2.Image" class="form-control" />
                <span asp-validation-for="Service2.Image" class="text-danger"></span>

                <label asp-for="Service2.Description" class="control-label"></label>
                <textarea asp-for="Service2.Description" class="form-control" rows="10"></textarea>
                <span asp-validation-for="Service2.Description" class="text-danger"></span>

                <label asp-for="Service2.Link" class="control-label"></label>
                <input asp-for="Service2.Link" class="form-control" />
                <span asp-validation-for="Service2.Link" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Service3.ID" type="hidden" />

