                <span asp-validation-for="Service1.Image" class="text-danger"></span>

                <label asp-for="Service1.Description" class="control-label"></label>
                <textarea asp-for="Service1.Description" class="form-control" rows="10">@Html.DisplayFor(model => model.Service1.Description)</textarea>
                <span asp-validation-for="Service1.Description" class="text-danger"></span>

                <label asp-for="Service1.Link" class="control-label"></label>
