                <label asp-for="Service3.Image" class="control-label"></label>
                <img src="~/images/@Html.DisplayFor(model => model.Service3.Image)" style="max-height:100px;" />
                <input asp-for="Service3.Image" class="form-control" />
                <span asp-validation-for="Service3.Image" class="text-danger"></span>

                <label asp-for="Service3.Description" class="control-label"></label>
                <textarea asp-for="Service3.Description" class="form-control" rows="10"></textarea>
                <span asp-validation-for="Service3.Description" class="text-danger"></span>

                <label asp-for="Service3.Link" class="control-label"></label>
                <input asp-for="Service3.Link" class="form-control" />
                <span asp-validation-for="Service3.Link" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Save" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-danger" role="button">Go Back</a>
            </div>
        </form>
    </div>
</div>

