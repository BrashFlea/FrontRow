@{
    ViewData["Title"] = "Home Page";
}

@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    string isEditable = HttpContextAccessor.HttpContext.Session.GetString("isEditable");
}

<section class="container-fluid main-header" id="home">
    <div class="row">
        <div class="col-lg-7 col-lg-offset-5">
            <div class="row">
                <p class="header-text-greeting col-xs-12">Hi</p>
            </div>
            <div class="sub-text-box row">
                <p class="sub-text col-xs-12">14 WARM BEDS. YOUTH 12-17. YOUR TEMPORARY HOME <span class="quicksand-dark-38-lightgreen">:) </span></p>
            </div>
        </div>
    </div>
</section>
<section id="header" class="container-fluid">
    <div class="row">
        <div class="col-xs-offset-1 col-xs-11">
            <p class="green-header">
                <span class="mont-semibold-dark-36 have-questions-heading">Have questions? Send us a text!</span>
                <span class="quicksand-dark-36-main"> (801) 528-1214</span>
            </p>
        </div>
    </div>
</section>

@if (@isEditable == "true")
{
    <div class="row text-center ">
        <a class="btn btn-success editableButton" href="#" role="button">Edit Header Section</a>
        <hr />
    </div>
}

<section class="container-fluid services">
    <div class="row">
        <div class="col-xs-12">
            <h4 class="services-heading">Services</h4>
            <p class="mont-light-light-22 about-services">Our programming is divided into three main areas. Each program area has specific components to meet the needs of the youth in need.</p>
        </div>
    </div>
    <div class="row">
        <div class="boxes">
            <div class="col-lg-4">
                <article class="panel">
                    <section class="panel-img-container">
                        <img src="~/images/house_icon.png" alt="House" class="panel-img" />
                    </section>
                    <section>
                        <p class="quicksand-light-32 panel-heading">Overnight Shelter</p>
                    </section>
                    <section>
                        <p class="mont-light-light-18 panel-summary">Located in the heart of downtown Ogden, Utah, Youth Futures provides emergency shelter, temporary residence and supportive services for runaway, homeless, unaccompanied and at-risk youth ages 12-17. The shelter is open 24 hours per day.</p>
                    </section>
                    <section class="panel-footer">
                        <p class="quicksand-light-24-green"><a href="secondary#sheltersMain">Learn more ></a></p>
                    </section>
                </article>
            </div>
            <div class="col-lg-4">
                <article class="panel">
                    <section class="panel-img-container">
                        <img src="~/images/door_icon.png" alt="Door" class="panel-img" />
                    </section>
                    <section>
                        <p class="quicksand-light-32 panel-heading">Drop-in Services</p>
                    </section>
                    <section>
                        <p class="mont-light-light-18 panel-summary">Available to any youth ages 12-18. Drop-in services allow for the youth to access food, clothing, hygiene items, laundry facilities, computer stations, and case management. Drop-in hours are 6:30 am to 8:00 pm every day of the week.</p>
                    </section>
                    <section class="panel-footer">
                        <p class="quicksand-light-24-green"><a href="secondary#dropinsMain">Learn more ></a></p>
                    </section>
                </article>
            </div>
            <div class="col-lg-4">
                <article class="panel">
                    <section class="panel-img-container">
                        <img src="~/images/van_icon.png" alt="Van" class="panel-img van-img" />
                    </section>
                    <section>
                        <p class="quicksand-light-32 panel-heading">Street Outreach</p>
                    </section>
                    <section>
                        <p class="mont-light-light-18 panel-summary">Youth Futures’ Street Outreach is conducted once per week and provides outreach and crisis services to youth in Ogden City, Utah.</p>
                    </section>
                    <section class="panel-footer">
                        <p class="quicksand-light-24-green"><a href="secondary#outreachBanner">Learn more ></a></p>
                    </section>
                </article>
            </div>
        </div>
    </div>
</section>

@if (@isEditable == "true")
{
    <div class="row text-center ">
        <a class="btn btn-success editableButton" href="#" role="button">Edit Services Section</a>
        <hr />
    </div>
}

