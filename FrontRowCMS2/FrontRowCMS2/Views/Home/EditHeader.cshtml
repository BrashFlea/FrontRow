@model FrontRowCMS2.Models.Home.Header

@{
    Layout = "~/Views/Shared/_EditLayout.cshtml";
}

@{
    ViewData["Title"] = "Edit Header";
}

<h4>Edit Header</h4>
<hr />
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form asp-action="EditHeader">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="TitleText" class="control-label"></label>
                <textarea asp-for="TitleText" class="form-control" rows="10"></textarea>
                <span asp-validation-for="TitleText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BackgroundImage" class="control-label"></label>
                <img src="~/images/@Html.DisplayFor(model => model.BackgroundImage)" style="max-height:100px;" />
                <input asp-for="BackgroundImage" class="form-control" />
                <span asp-validation-for="BackgroundImage" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Save" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-danger" role="button">Go Back</a>
            </div>
        </form>
    </div>
</div>

